{
  "name": "dbbase",
  "displayName": "DBBase - Professional Database Manager & MCP",
  "description": "Professional SQL client with DBeaver/DataGrip fluidity. High-performance grid, native MCP for AI context (Copilot/Claude), and advanced exports for Postgres & MySQL.",
  "publisher": "DBbase",
  "icon": "resources/icon.png",
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Programming Languages",
    "Data Science",
    "Other"
  ],
  "homepage": "https://dbbase.com.br/",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucatsf/dbbase"
  },
  "activationEvents": [
    "onLanguage:sql"
  ],
  "license": "MIT",
  "keywords": [
    "sql",
    "postgres",
    "mysql",
    "database",
    "datagrip",
    "mcp",
    "query",
    "dbbase"
  ],
  "author": {
    "name": "Lucas Torres São Felicio",
    "email": "lucastorresfellicio@gmail.com"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dbbase-explorer",
          "title": "DBBase",
          "icon": "$(database)"
        }
      ],
      "panel": [
        {
          "id": "dbbase-results-container",
          "title": "DBBase",
          "icon": "$(database)"
        }
      ]
    },
    "views": {
      "dbbase-explorer": [
        {
          "id": "dbbase-connections",
          "name": "Conexões",
          "icon": "$(database)"
        }
      ],
      "dbbase-results-container": [
        {
          "id": "dbbase.resultsView",
          "type": "webview",
          "name": "Resultados",
          "icon": "$(table)"
        }
      ]
    },
    "commands": [
      {
        "command": "dbbase.openRedisKey",
        "title": "DBBase: Abrir Chave Redis"
      },
      {
        "command": "dbbase.newQuery",
        "title": "DBBase: Nova Query",
        "icon": "$(add)"
      },
      {
        "command": "dbbase.openQueryFile",
        "title": "DBBase: Abrir Arquivo de Query"
      },
      {
        "command": "dbbase.deleteQuery",
        "title": "DBBase: Excluir Query",
        "icon": "$(trash)"
      },
      {
        "command": "dbbase.renameQuery",
        "title": "DBBase: Renomear Query",
        "icon": "$(edit)"
      },
      {
        "command": "dbbase.openQueryEditor",
        "title": "DBBase: Nova Aba de Query",
        "icon": "$(add)"
      },
      {
        "command": "dbbase.addConnection",
        "title": "Adicionar Conexão",
        "icon": "$(plus)"
      },
      {
        "command": "dbbase.deleteConnection",
        "title": "Excluir Conexão",
        "icon": "$(trash)"
      },
      {
        "command": "dbbase.refreshConnections",
        "title": "Atualizar Conexões",
        "icon": "$(refresh)"
      },
      {
        "command": "dbbase.disconnectConnection",
        "title": "Desconectar",
        "icon": "$(debug-disconnect)"
      },
      {
        "command": "dbbase.editConnection",
        "title": "Editar Conexão",
        "icon": "$(edit)"
      },
      {
        "command": "dbbase.runQuery",
        "title": "DBBase: Executar Query"
      },
      {
        "command": "dbbase.openTable",
        "title": "DBBase: Abrir Tabela"
      },
      {
        "command": "dbbase.setupMCP",
        "title": "DBBase: Configurar Servidor MCP (Claude Desktop)",
        "icon": "$(settings-gear)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "dbbase.addConnection",
          "when": "view == dbbase-connections",
          "group": "navigation@1"
        },
        {
          "command": "dbbase.refreshConnections",
          "when": "view == dbbase-connections",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "dbbase.newQuery",
          "when": "view == dbbase-connections && viewItem == queries-folder",
          "group": "inline"
        },
        {
          "command": "dbbase.deleteQuery",
          "when": "view == dbbase-connections && viewItem == query-file",
          "group": "inline"
        },
        {
          "command": "dbbase.renameQuery",
          "when": "view == dbbase-connections && viewItem == query-file",
          "group": "inline"
        },
        {
          "command": "dbbase.disconnectConnection",
          "when": "view == dbbase-connections && viewItem == connection-online",
          "group": "inline@1"
        },
        {
          "command": "dbbase.editConnection",
          "when": "view == dbbase-connections && viewItem =~ /connection/",
          "group": "inline@2"
        },
        {
          "command": "dbbase.deleteConnection",
          "when": "view == dbbase-connections && viewItem =~ /connection/",
          "group": "inline@3"
        }
      ]
    },
    "keybindings": [
      {
        "command": "dbbase.runQuery",
        "key": "ctrl+enter",
        "mac": "cmd+enter",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/ioredis": "^4.28.10",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.9",
    "@types/pg": "^8.16.0",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "ioredis": "^5.9.2",
    "mysql2": "^3.16.3",
    "pg": "^8.18.0",
    "xlsx": "^0.18.5"
  }
}
